{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Quark Downloader Pro",
    "version": "0.1.0",
    "identifier": "com.quark.downloader",
    "build": {
        "beforeDevCommand": "npm --prefix frontend run dev -- --host 127.0.0.1 --port 1420",
        "beforeBuildCommand": "npm --prefix frontend run build",
        "devUrl": "http://127.0.0.1:1420",
        "frontendDist": "../frontend/dist"
    },
    "app": {
        "windows": [],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.ico",
            "icons/icon.png"
        ]
    }
}
